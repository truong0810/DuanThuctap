@model PagedList.IPagedList<DuanThuctap.Models.DONHANG>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Đánh giá";
    Layout = "~/Views/Shared/Header_Menu.cshtml";
}
<!--Side bar bên phải-->
<div class="col-9 p-2 shadow-sm bg-white border border-2 ml-1" style="border-radius: 10px;margin-top: 64px;">
    <main>
        <div class="container-fluid px-4">
            <div class="row">
                <h4 class="mt-3">Đánh giá từ khách hàng</h4>
                <hr />
                
                <div class="table mt-4" >
                    <table class="table table-striped table-hover text-center border">
                        <tr class="fw-title" style="font-weight:600;">
                            <td width="100px">Mã khách hàng</td>
                            <td width="200px">Tên khách hàng</td>
                            <td>Đánh giá</td>
                            
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MAKH</td>
                                <td>@item.KHACHHANG.TENKH</td>
                                <td>@item.DANHGIA</td>
                            </tr>
                        }
                    </table>
                    <!-- Thêm phân trang vào -->
                    <div class="text-right fw-title text-primary">
                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                    </div>
                    @Html.PagedListPager(Model, page => Url.Action("Danhgia_Nhanxet", new { page }))
                    <!-- Kết thúc -->
                </div>
            </div>
        </div>
    </main>
</div>
<!--Side bar bên phải-->
