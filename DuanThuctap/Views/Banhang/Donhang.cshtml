@model PagedList.IPagedList<DuanThuctap.Models.DONHANG>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Donhang";
    Layout = "~/Views/Shared/Header_Menu.cshtml";
}
<!--Side bar bên phải-->
<div class="col-9 p-2 shadow-sm bg-white border border-2 ml-1" style="border-radius: 10px;margin-top: 64px;">
    <main>
        <div class="container-fluid px-4">
            <div class="row">
                <h4>Đơn hàng đang đợi duyệt</h4>
                <hr />
                <div class="table">
                    <table class="table table-striped table-hover text-center border" >
                        <tr class="fw-title" style="font-weight:600;">
                            <td>Mã đơn hàng</td>
                            <td>Tên khách hàng</td>
                            <td>Tên sản phẩm</td>
                            <td>Số điện thoại</td>
                            <td>Địa chỉ giao</td>
                            <td>Số lượng</td>
                            <td>Tổng tiền</td>
                            <td>Mô tả</td>
                            <td>Hủy</td>
                            <td>Duyệt</td>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MADH</td>
                                <td>@item.KHACHHANG.TENKH</td>
                                <td>@item.SANPHAM.TENSP</td>
                                <td>@item.SDT</td>
                                <td>@item.DIACHIGIAO</td>
                                <td>@item.SOLUONG</td>
                                <td>@item.TONGTIEN</td>
                                <td>@item.MOTA</td>
                                <td>
                                    <div class="form-actions no-color">
                                        <a href="@Url.Action("Deleteorder", new { id = item.MADH })">
                                            <input type="submit" value="Hủy" class="btn btn-danger" />
                                        </a>
                                    </div>
                                </td>
                                <td>
                                    <div class="form-actions no-color">
                                        <a href="@Url.Action("ApproveOrder", new { id = item.MADH })">
                                            <input type="submit" value="Duyệt" class="btn btn-danger" />
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </table>
                    <!-- Thêm phân trang vào -->
                    <div class="text-right fw-title text-primary">
                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                    </div>
                    @Html.PagedListPager(Model, page => Url.Action("Donhang", new { page }))
                    <!-- Kết thúc -->
                </div>
            </div>
        </div>
    </main>
</div>
<!--Side bar bên phải-->
