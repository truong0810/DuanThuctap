@model DuanThuctap.Models.LOAISANPHAM
@{
    ViewBag.Title = "Createloaisanpham";
    Layout = "~/Views/Shared/Header_Menu.cshtml";
}
<style>
    .fs-15{
    font-size:14pt !important;
    font-weight:500;
    }
</style>
<!--Side bar bên phải-->
<div class="col-9 p-2 shadow-sm bg-white border border-2 ml-1" style="border-radius: 10px;margin-top: 64px;">
    <main>
        <div class="container-fluid px-4">
            <h3>Thêm loại sản phẩm</h3>
            <div>
                <p class="text-center text-danger" style="font-size:16pt;font-weight:600;">Thông tin loại sản phẩm</p>
            </div>
            <form method="post">
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-12 mt-4">
                        <h6>Mã loại sản phẩm</h6>
                    </div>
                    <div class="col-12">
                        <input type="text" class="form-control" name="MALOAISP" placeholder="Nhập mã loại sản phẩm ....." />
                    </div>
                    <div class="col-12 mt-1">
                        @Html.ValidationMessageFor(model => model.MALOAISP, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-12 mt-4">
                        <h6>Tên loại sản phẩm</h6>
                    </div>
                    <div class="col-12">
                        <input type="text" class="form-control" name="TENLOAISP" placeholder="Nhập tên loại sản phẩm ....." />
                    </div>
                    <div class="col-12 mt-1">
                        @Html.ValidationMessageFor(model => model.TENLOAISP, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-12 mt-2">
                        <p class="text-danger fs-15">@TempData["erorr"]</p>
                    </div>
                    <div class="col-12">
                        <a href="@Url.Action("Createloaisanpham", "Sanpham")">
                            <button type="submit" class="btn btn-primary mt-2 px-4 " style="font-size:15pt;font-weight:600;">Thêm loại sản phẩm</button>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </main>
</div>
<!--Side bar bên phải-->
