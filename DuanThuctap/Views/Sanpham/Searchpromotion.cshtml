@model IEnumerable<DuanThuctap.Models.KHUYENMAI>
@{
    ViewBag.Title = "Search Promotion";
    Layout = "~/Views/Shared/Header_Menu.cshtml";
}
<style>
    .fw-title {
        font-size: 14pt;
        font-weight: 600;
    }
</style>
<!--Side bar bên phải-->
<div class="col-9 p-2 shadow-sm bg-white border border-2 ml-1" style="border-radius: 10px;margin-top: 64px;">
    <main>
        <div class="container-fluid px-4">
            <h3>Danh sách tìm kiếm</h3>
            <hr />
            <div class="table">
                <table class="table table-striped table-hover text-center border border-1">
                    <tr class="fw-title">
                        <td>@Html.DisplayNameFor(m => m.MAKM)</td>
                        <td>@Html.DisplayNameFor(m => m.TENKM)</td>
                        <td>@Html.DisplayNameFor(m => m.PHANTRAM)</td>

                    </tr>
                    @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.MAKM)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.TENKM)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.TENKM)
                    </td>
                </tr>
                    }
                </table>
                <hr />
                <a href="@Url.Action("Khuyenmai","Sanpham")">
                    <button type="button" class="btn btn-primary">Quay lại</button>
                </a>
            </div>
        </div>
    </main>
</div>
<!--Side bar bên phải-->
