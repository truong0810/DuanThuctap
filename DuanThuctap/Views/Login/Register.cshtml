<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Register</title>
</head>
<style>
    body {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0;
        margin: 0;
        background-color: #f8f9fa;
        height: 100vh;
    }

    .register {
        width: 600px;
        padding: 0 50px 50px;
        background-color: #fff;
        border-radius: 5px;
        border: 1px solid #f4eeee;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .exitregister {
        color: black;
        padding: 15px;
        font-size: 20px;
        margin-right: -33px;
    }

    .btn {
        width: 120px;
        margin-left: 240px;
    }
</style>
<body>
    <div class="register">
        <div class="d-flex">
            <a href="@Url.Action("Login","Login")" class="exitregister ml-auto"><i class="fa-solid fa-xmark"></i></a>
        </div>
        <h2 class="text-center mb-5 mt-0 text-uppercase">Đăng Ký</h2>
        <form action="" method="Post">
            @Html.AntiForgeryToken()
            <div class="row mb-3 form-group">
                <div class="col-3">
                    <label for="name">Tên: </label>
                </div>
                <div class="col-9">
                    <input type="text" name="TENDN" id="name" class="form-control" placeholder="Nhập tên" required>
                </div>
            </div>
            <div class="row mb-3 form-group">
                <div class="col-3">
                    <label for="email">Email: </label>
                </div>
                <div class="col-9">
                    <input type="email" name="EMAIL" id="email" class="form-control" placeholder="Nhập email" required>
                </div>
            </div>

            <div class="row mb-3 form-group">
                <div class="col-3">
                    <label for="password">Mật khẩu: </label>
                </div>
                <div class="col-9">
                    <input type="password" name="MATKHAU" id="password" class="form-control" placeholder="Nhập mật khẩu" required>
                </div>
            </div>

            <p class="text-danger">
                @TempData["erorr1"]
            </p>
            <!--  <div class="row mb-3 form-group">
        <div class="col-3">
            <label for="password1">Nhập lại khẩu: </label>
        </div>
        <div class="col-9">
            <input type="password" name="password1" id="password1" class="form-control" placeholder="Nhập lại mật khẩu" required>
        </div>
    </div>-->
            <div class="row mt-3">
                <div class="col-6">
                    <a href="@Url.Action("Login","Login")" class="text-left">Đăng nhập</a>
                </div>

            </div>
            <div class="row form-group mt-2">
                <button type="submit" class="btn btn-primary btn-block">Đăng ký</button>

            </div>

        </form>
    </div>
</body>
</html>
